{
    "compilerOptions": {
        "target": "ESNext",
        "module": "node16",
        "moduleResolution": "node16",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "api/**/*",
        "shared/**/*"
    ]
}